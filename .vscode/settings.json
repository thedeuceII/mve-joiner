{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
  
    "search.useIgnoreFiles": true,
  
    "python.languageServer": "Pylance",
    "python.testing.pytestEnabled": true,
    "python.testing.pytestPath": "${workspaceFolder}/.venv/bin/pytest",
    "python.analysis.diagnosticSeverityOverrides": {
      "reportAttributeAccessIssue": "none"
    },
  
    "black-formatter.importStrategy": "fromEnvironment",
    "black-formatter.path": ["${workspaceFolder}/.venv/bin/black"],
    "black-formatter.args": ["--target-version=py312"],
  
    "mypy-type-checker.importStrategy": "fromEnvironment",
    "mypy-type-checker.interpreter": ["${workspaceFolder}/.venv/bin/python"],
    "mypy-type-checker.path": ["${workspaceFolder}/.venv/bin/mypy"],
    "mypy-type-checker.args": ["--config-file=${workspaceFolder}/pyproject.toml"],
  
    "debug.internalConsoleOptions": "neverOpen",
  
    "files.exclude": {
      "**/.git": true,
      "**/.DS_Store": true,
      "**/htmlcov": true,
      "**/test-results": true,
      ".coverage": true,
      "celerybeat-schedule": true,
      ".pytest_cache": true,
      "**/.pytest_cache": true,
      "**/.pnpm-store": true,
      "**/node_modules": true,
      "**/.mypy_cache": true,
      "**/__pycache__": true,
      "**/.ruff_cache": true
    },
    "search.exclude": {
      "**/.git": true,
      "**/.DS_Store": true,
      "**/htmlcov": true,
      "**/test-results": true,
      ".coverage": true,
      "celerybeat-schedule": true,
      ".pytest_cache": true,
      "**/.pytest_cache": true,
      "**/.venv": true,
      "**/.pnpm-store": true,
      "**/node_modules": true,
      "**/.mypy_cache": true,
      "**/__pycache__": true,
      "**/.ruff_cache": true
    },
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yml]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[python]": {
      "editor.defaultFormatter": "charliermarsh.ruff",
      "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
      }
    },
    "python.REPL.enableREPLSmartSend": false,
    "python.analysis.typeCheckingMode": "off"
  }